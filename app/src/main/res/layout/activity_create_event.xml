<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manushrivastava.muj_campusconnect.CreateEventActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/student_event_name"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:text="Event Name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView15"
                android:layout_below="@+id/student_event_name"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"
                android:text="Event ID"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_name"
                android:layout_alignTop="@+id/textView16"
                android:layout_marginRight="8dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView15"
                android:layout_below="@+id/student_event_id"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:text="Category"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_id"
                android:layout_alignTop="@+id/textView17"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView17"
                android:layout_below="@+id/student_event_category"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="15dp"
                android:text="Sub-Category"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_sub-category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_category"
                android:layout_alignTop="@+id/textView18"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView18"
                android:layout_below="@+id/student_event_sub-category"
                android:layout_marginTop="15dp"
                android:text="Date"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_sub-category"
                android:layout_alignTop="@+id/textView19"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="date" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView19"
                android:layout_below="@+id/student_event_date"
                android:layout_marginTop="15dp"
                android:text="Time"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_date"
                android:layout_alignTop="@+id/textView20"
                android:ems="10"
                android:inputType="time" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/student_event_time"
                android:layout_marginTop="15dp"
                android:text="Venue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/student_event_time"
                android:layout_alignTop="@+id/textView21"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView18"
                android:layout_alignStart="@+id/textView21"
                android:layout_below="@+id/student_event_venue"
                android:layout_marginTop="15dp"
                android:text="Description"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/student_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:layout_alignTop="@+id/textView22"
                android:layout_alignStart="@+id/student_event_venue" />

            <Button
                android:id="@+id/student_create_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/student_event_description"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="41dp"
                android:text="Create"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
